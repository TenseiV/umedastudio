<script>
  // Importer directement dans le script navigateur
  import { tsParticles } from "https://cdn.jsdelivr.net/npm/tsparticles-engine/+esm";
  import { loadSlim } from "https://cdn.jsdelivr.net/npm/tsparticles-slim/+esm";

  // Initialisation de tsParticles
  async function loadParticles(options) {
    // Plus besoin d'attendre loadSlim ici si on l'importe directement
    await loadSlim(tsParticles);
    await tsParticles.load({ id: "particles-js", options});
  }

  // Configuration des particules (inchangée)
  const particlesOptions = {
    particles: {
      number: {
        value: 80, // Nombre de particules
        density: {
          enable: true,
          value_area: 800
        }
      },
      color: {
        value: "#ffffff" // Couleur blanche
      },
      shape: {
        type: "circle" // Forme
      },
      opacity: {
        value: 0.5, // Opacité
        random: true
      },
      size: {
        value: 2, // Taille
        random: true
      },
      move: {
        enable: true,
        speed: 1.5, /* Vitesse augmentée */
        direction: "none",
        random: true,
        straight: false,
        out_mode: "out",
        bounce: false
      }
    },
    interactivity: {
      detect_on: "canvas",
      events: {
        onhover: {
          enable: false // Pas d'interaction au survol
        },
        onclick: {
          enable: false // Pas d'interaction au clic
        },
        resize: true
      }
    },
    detectRetina: true
  };

  // Charger les particules ET initialiser l'observer quand le DOM est prêt
  document.addEventListener('DOMContentLoaded', async () => {
    loadParticles(particlesOptions);

    // --- Intersection Observer pour animations --- 
    const sections = document.querySelectorAll(
      '.services-section, .portfolio-section, .testimonials-section, .pricing-section, .contact-section'
    );

    if (sections.length === 0) return; // Si pas de sections, on arrête

    const observerOptions = {
      root: null, // par rapport au viewport
      rootMargin: '0px',
      threshold: 0.1 // Déclencher quand 10% de la section est visible
    };

    const observerCallback = (entries, observer) => {
      entries.forEach(entry => {
        // Si l'élément est visible
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
          // Optionnel: arrêter d'observer une fois l'animation faite
          observer.unobserve(entry.target);
        }
      });
    };

    const observer = new IntersectionObserver(observerCallback, observerOptions);

    sections.forEach(section => {
      observer.observe(section);
    });
    // --- Fin Intersection Observer ---

  });
</script>

